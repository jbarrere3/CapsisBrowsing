   issn = {13541013},
   issue = {5},
   journal = {Global Change Biology},
   keywords = {Climate change,Climate change impacts,Forest growth,Forest productivity,Forest vegetation,Review of changes in forests},
   month = {5},
   pages = {862-882},
   title = {Impacts of climate change on natural forest productivity - Evidence since the middle of the 20th century},
   volume = {12},
   year = {2006},
}
