   issue = {6},
   journal = {Ecological Applications},
   keywords = {Atherosperma moschatum,Bayesian hierarchical modeling,Black Saturday fire,Eucalyptus,Nothofagus cunninghamii,disturbance ecology,fire severity,latent variables,mountain ash,size-related mortality,southeastern Australia,wildfire},
   month = {9},
