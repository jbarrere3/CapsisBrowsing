@article{Korpinen2016,
   abstract = {Ever more extensive use of marine space by human activities and greater demands for marine natural resources has led to increases in both duration and spatial extent of pressures on the marine environment. In parallel, the global crisis of decreasing biodiversity and loss of habitats has revitalized scientific research on human impacts and lead to methodological development of cumulative pressure and impact assessments (CPIA). In Europe alone, almost twenty CPIAs have been published in the past 10 years and some more in other sea regions of the world. In this review, we have analysed 36 recent marine CPIAs and focused on their methodological approaches. We were especially interested in uncovering methodological similarities, identifying best practices and analysing whether the CPIAs have addressed the recent criticism. The review results showed surprisingly similar methodological approaches in >50% of the studies, raising hopes for finding coherence in international assessment efforts. Although the CPIA methods showed relatively few innovative approaches for addressing the major caveats of previous CPIAs, the most recent studies indicate that improved approaches may be soon found.},
   author = {Samuli Korpinen and Jesper H. Andersen},
   doi = {10.3389/fmars.2016.00153},
   issn = {2296-7745},
   issue = {153},
   journal = {Frontiers in Marine Science},
   keywords = {cumulative effects,ecosystem-based,ecosystem-based management,human activities,impacts,multiple stressors,pressures},
   note = {Sur 40 études revues: <br/><br/>- 33 évaluaient les impacts cumulés, 7 seulement les pressions cumulées<br/><br/>- 35 considèrent que les impacts ou les pressions sont additives, alors que 5 ont inclu des effets synergiques ou anatagonistes<br/><br/>- 37 considèrent que les relations activités / pression / impact sont linéaires, les autres relations sont catégorqiues<br/><br/>- 10 études ont défini tous les liens entre activités humaines, pressions et impacts<br/><br/>- Seule une seule étude a considéré un maximum potentiel de la valeur des pressions. Pour les autres études, ce maximum correspond à l'intensité maximum de la pression observé dans l'étude. <br/><br/>- Sur les 35 études pondérant les impacts ou les pressions, 23 se sont basées sur des experts et 14 sur des revues bibliographique <br/><br/>- Seules 5 études ont validé leurs résultats en les comparant avec des données environnementales. La comparaison la plus solide étant celle de Clark et al., 2016},
   pages = {1-11},
   title = {A Global Review of Cumulative Pressure and Impact Assessments in Marine Environments},
   volume = {3},
   url = {http://journal.frontiersin.org/Article/10.3389/fmars.2016.00153/abstract},
   year = {2016},
}
@article{Halpern2013,
   abstract = {Efforts to underst and and map cumulative impacts of human activities on ecosystems have gained new interest and relevance as management moves towards ecosystem-based approaches that require such assessments. The last five years have seen a proliferation of efforts to characterize and map cumulative impacts, providing insight into the strengths and limitations of these efforts and where opportunities lie for progress. Here we provide a review of the key assumptions that underlie most cumulative impact mapping efforts, describing the implications and rationales for the assumptions, and highlight the many challenges cumulative impact mapping efforts face. We end with a brief summary of several future research directions that will help greatly improve application of cumulative impact mapping to resource management and conservation planning efforts. © 2013 Halpern and Fujita.},
   author = {Benjamin S. B.S. Halpern and Rod Fujita},
   doi = {10.1890/ES13-00181.1},
   issn = {2150-8925},
   issue = {10},
   journal = {Ecosphere},
   keywords = {Conservation planning,Ecosystem-based management,Marine spatial planning,Risk assessment},
   note = {Principales hypothèses lors de la cartographie des effets concomitants: <br/>1. Les activités sont de même importance ce qui rend déterminant le choix de quelles activités choisir et du niveau de détail des activités auquel il faut se placer. <br/>2. Le problème de la distribution uniforme des activités au sein d'une maille. Implique une suréstimation ou une sous estimation des activités à certains endroits. <br/>3. Idem pour les habitats<br/>4. La normalisation des activités=étape crucial qui influence grandement le raésultat final, notamment pour le choix de la valeur maximum. <br/>5. Les habitats répondent à l'intensité des activités de manière linéaire.<br/>6. Les localisations appartenant au même type d'écosystème répondent de la même manière à une activité dans l'espace et dans le temps. <br/>7. Problème de la précision des combinaisons habitat-activité: peu de ces combinaisons ont été suffisament étudiées pour baser ces pondérations sur des données empiriques. <br/>8. Hypothèse de l'additivité des pressions: on sais très peu de chose sur des potentielles relations synergiques ou antagonistes. <br/>9. Comparaison difficile avec la réalité: le suivi de toutes les variables influençant l'état de l'écosystème de manière suffisammet précise pour permettre une bonne comparaison. D'autant plus que la relation entre l'état de l'écosystème et la valeur de l'indice n'est probablement pas linéaire. <br/><br/>Principaux challenges et soutions existantes: <br/>- Le manque de données: trois solutions principales pour ce problème très fréquent. (i) Trouver une valeur proxy suffisament précise pour être utilisée. (ii) Utiliser les outils statistiques de modélisation pour prédire les valeurs manquantes et (iii) sacrifier des données et laisser des trous lorsqu'on a pas les données. <br/>- Résolution des données pas la même partout: (i) se baser sur la résolution parfaite ce qui implique une perte de données pour les meilleurs résolutions, (ii) se baser sur la meilleur résolution: extrapolation potentiellement imprécise des résolutions plus larges et (iii) n'utiliser que les données qui sont à la même résoltution. <br/>- La prise en compte des impacts historiques qui ont grandement influencé les écosystèles actuels et leur résistance aux pressions --&gt; problème: très peu de données existent à ce sujet. <br/>- La variabilité temporelle des pressions, limitée aujourd'hui par un manque de données suivies précisemment dans le temps et par une charge de données trop importante pour les pressions qui le sont. <br/><br/>Perspectives: <br/>- L'ajout de nouvelles données sur les pressions, de plus en plus précises. <br/>- Nécessité de progresser dans la cartographie des écosystèmes marins et de leur état écologique<br/>- La très probable non linéarité de la réponse des écosystèmes aux pressions : un vrai challenge consiste à recueillir des iinformations sur des seuils éventuels et la forme des courbes réponse. Pb: probable forte variabilité selon pressions, habitats etc. --&gt; généralisation quasi impossible.<br/>- Encore très peu de connaissance sur quels pressions sont synergiques, antagonistes ou additives. Point particulièrement sensible pour l'utilisatio de l'évaluation comme appui à des politiques de gestion.},
   pages = {1-11},
   title = {Assumptions, challenges, and future directions in cumulative impact analysis},
   volume = {4},
   url = {http://www.scopus.com/inward/record.url?eid=2-s2.0-84891898692&partnerID=tZOtx3y1},
   year = {2013},
}
@article{ClarkeMurray2015,
   abstract = {The rapidly progressing field of cumulative effects mapping is highly dependent on data quality and quantity. Availability of spatial data on the location of human activities on or affecting the ocean has substantially improved our understanding of potential cumulative effects. However, datasets for some activities remain poor and increased access to current, high resolution data are needed. Here we present an updated analysis of potential cumulative effects in Canada's Pacific marine waters. New, updated datasets and methodological improvements over the previous analysis were completed, including a new index for land-based effects on marine habitats, updated habitat classes and a modified treatment of vulnerability scores. The results show increased potential cumulative effects for the region. Fishing remains the biggest overall impact amongst marine activities, while land-based activities have the highest impact per unit area in affected ocean areas. Intertidal areas were the most affected habitat per unit area, while pelagic habitats had the highest total cumulative effect score. Regular updates of cumulative effects assessments will make them more useful for management, but these require regularly updated, high resolution datasets across all activity types, and automated, well-documented procedures to make them accessible to managers and policy-makers.},
   author = {Cathryn Clarke Murray and Selina Agbayani and Hussein M. Alidina and Natalie C. Ban},
   doi = {10.1016/j.marpol.2015.04.003},
   isbn = {0308-597X},
   issn = {0308597X},
   journal = {Marine Policy},
   keywords = {British Columbia,Canada,Cumulative effect,Cumulative impact mapping,Marine,Multiple stressors},
   pages = {71-77},
   title = {Advancing marine cumulative effects mapping: An update in Canada's Pacific waters},
   volume = {58},
   year = {2015},
}
@article{Stelzenmuller2010,
   abstract = {For the UK continental shelf we developed a Bayesian Belief Network-GIS framework to visualise relationships between cumulative human pressures, sensitive marine landscapes and landscape vulnerability, to assess the consequences of potential marine planning objectives, and to map uncertainty-related changes in management measures. Results revealed that the spatial assessment of footprints and intensities of human activities had more influence on landscape vulnerabilities than the type of landscape sensitivity measure used. We addressed questions regarding consequences of potential planning targets, and necessary management measures with spatially-explicit assessment of their consequences. We conclude that the BN-GIS framework is a practical tool allowing for the visualisation of relationships, the spatial assessment of uncertainty related to spatial management scenarios, the engagement of different stakeholder views, and enables a quick update of new spatial data and relationships. Ultimately, such BN-GIS based tools can support the decision-making process used in adaptive marine management. © 2010 Elsevier Ltd.},
   author = {V. Stelzenmüller and J. Lee and E. Garnacho and S. I. Rogers},
   doi = {10.1016/j.marpolbul.2010.06.024},
   isbn = {0171-8630},
   issn = {0025326X},
   issue = {10},
   journal = {Marine Pollution Bulletin},
   keywords = {Cumulative pressure,Marine spatial planning,Scenarios,Sensitivity assessment,Uncertainty,Vulnerability},
   note = {Principe d'adaptation de la méthode: <br/>- Pour les activités, division en catégorie (score de 0 à 9) et attribution d'une probabilité pour chaque catégorie en se basant sur leur répartition dans la zone étudiée. <br/>- La pression cumulée pour chaque maille est calculée comme la somme des intensités des trois activits humaines<br/>- Chaque maille est associée à un unique habitat ayant une sensibilité à chacune des tros activités humaines. <br/>- La vulnérabilité d'une maille est alors calculée comme le produit de la sensibilité totale et de la prssion cumulée. <br/>- Le modèle Bayésien représente le niveau de vulnérabilité de la zone d'étude en fonction de l'intensité de trois activités humaines. <br/>- Comme pour les activités les habitats sont associés à une probabilité d'occurence. <br/>- Les probailités associé aux pressions cumulées sont calculées en fonction des activités. <br/>- Pour passer d'un noeud parent à un noeud enfant, utilisation d'une table de probabilité. Exemple du passage activité à pression: selon la catégorie à laquelle apartient chaque activité, attribution d'une probabilité pour chaque catégorie de pression. Ainsi de suite..<br/>- Calcul de la sensilité du modèle aux variables d'entrées: permet de voir quelles variables d'entrées modifient le plus le modèle. Il s'ait du calcul de la réduction de variance (cf. Marcot et al., 2006). <br/>- Puis calcul pour chaque grille de la probailité de chaque catégorie de vulnérabilité. Calcul de l'erreur de type I. en comparant ces probabilités aux vrais valeurs de vulnérabilité. <br/><br/>Deuxième utilisation des réseaux bayésiens: l'étude de plusieurs scénarios. <br/>Description des différents scénarios: <br/>- Scénario 1: Objectif de garder la pression cumulée dans la catégorie 2 --&gt; Probabilité de 100% pour cette catégorie sur toute la zone. Calcul des changements d'intensité des activités humaines qu'il faudrait faire pour atteindre cet objectif. <br/><br/>- Scénario 2: L'idée est de tester la potentielle utilisation du modèle pour la conservation des sites en identifiant les habitats qui contribuent le plus à un haut niveau de vulnérabilité (catégorie de pression identique que pour le scénario précédent et proba d'un niveau de vulnérabilité élevé à 100%). <br/><br/>- Scénario 3: Changement de la vulnérabilité du paysage après le déplaceemnt d'une activité. Pour une zone donnée, définition de deux zones de conservations et répartition de l'effort de pêche de ces zones dans les mailles autour --&gt; étude des modifications de la vulnérabilité de l'ensemble de la zone d'étude.},
   pages = {1743-1754},
   pmid = {20619861},
   title = {Assessment of a Bayesian Belief Network-GIS framework as a practical tool to support marine planning},
   volume = {60},
   year = {2010},
}
@article{Crain2008,
   abstract = {Humans impact natural systems in a multitude of ways, yet the cumulative effect of multiple stressors on ecological communities remains largely unknown. Here we synthesized 171 studies that manipulated two or more stressors in marine and coastal systems and found that cumulative effects in individual studies were additive (26%), synergistic (36%), and antagonistic (38%). The overall interaction effect across all studies was synergistic, but interaction type varied by response level (community: antagonistic, population: synergistic), trophic level (autotrophs: antagonistic, heterotrophs: synergistic), and specific stressor pair (seven pairs additive, three pairs each synergistic and antagonistic). Addition of a third stressor changed interaction effects significantly in two-thirds of all cases and doubled the number of synergistic interactions. Given that most studies were performed in laboratories where stressor effects can be carefully isolated, these three-stressor results suggest that synergies may be quite common in nature where more than two stressors almost always coexist. While significant gaps exist in multiple stressor research, our results suggest an immediate need to account for stressor interactions in ecological studies and conservation planning.},
   author = {Caitlin Mullan Crain and Kristy Kroeker and Benjamin S. Halpern},
   doi = {10.1111/j.1461-0248.2008.01253.x},
   isbn = {1461-0248},
   issn = {1461023X},
   issue = {12},
   journal = {Ecology Letters},
   keywords = {Antagonisms,Cumulative stressors,Cumulative threat models,Ecosystem-based management,Interactions,Synergisms,Threat-analysis},
   note = {Méta-analyse cherchant à déterminer si le cumul des activités est additif, antagoniste ou synergique. <br/><br/>En plus des 3 modes les plus répandus (additif, antagoniste et synergique), il est décrit deux autres possibilités: <br/>- modèle multiplicatif: l'effet cumulé est le produit de l'effet des différents stresseurs. <br/>- modèle comparatif: l'effet cumulé est déterminé par un unique stresseur dominant. <br/><br/>Résultats: un effet synergique semble dominer. Cependant, les 3 modes de cumul sont réguilièrement trouvés dans les études.},
   pages = {1304-1315},
   pmid = {19046359},
   title = {Interactive and cumulative effects of multiple human stressors in marine systems},
   volume = {11},
   year = {2008},
}
@article{Chen2013,
   abstract = {Statistical and dynamical downscaling techniques have been proposed to bridge the gaps between coarse-scale and generally biased climate model outputs and the point-scale requirements of impact model inputs. Amongst the various statistical approaches, empirical downscaling methods are the most commonly used due to their ease of implementation. Several empirical downscaling approaches have been proposed and need to be assessed as to which method contributes (or not) to the overall climate change uncertainty. Accordingly, this work aims at assessing the uncertainty of six empirical downscaling methods in quantifying the hydrological impact of climate change over two North American river basins under different climate conditions. The six empirical downscaling methods are grouped into change factor (two methods) and bias correction (four methods) approaches. The uncertainty related to the choice of an empirical downscaling method is compared to that associated with the choice of climate simulation, through the use of two Regional Climate Models (RCMs) driven by three different General Circulation Models (GCMs), totaling four RCM simulations, taken from the NARCCAP inter-comparison project. The future (2041-2065) hydrological regimes simulated with an empirical lumped hydrology model (HSAMI) are compared to the reference period (1971-1995) using a set of hydrology criteria which includes statistics of both mean and extreme values. The results show a large uncertainty envelope associated with the choice of a given empirical downscaling method, as well as for the choice of an RCM simulation. The uncertainty due to empirical downscaling and RCM simulation was more significant in projecting extreme streamflow than in projecting mean flows. Comparing the uncertainty envelope of empirical downscaling methods to the envelope resulting from four RCM simulations indicates that both are similar, even though the latter was slightly larger for some statistics. Finally, the uncertainty linked to the choice of an empirical downscaling approach (change factor vs. bias correction) was much larger than within each type. Overall, this work emphasizes the importance of using several climate projections and empirical downscaling approaches to delineate uncertainty when assessing the climate change impacts on hydrology. © 2012 Elsevier B.V.},
   author = {Jie Chen and François P. Brissette and Diane Chaumont and Marco Braun},
   doi = {10.1016/j.jhydrol.2012.11.062},
   isbn = {00221694},
   issn = {00221694},
   journal = {Journal of Hydrology},
   keywords = {Climate change,Empirical downscaling,Hydrology,Model output statistics,Uncertainty},
   pages = {200-214},
   publisher = {Elsevier B.V.},
   title = {Performance and uncertainty evaluation of empirical downscaling methods in quantifying the climate change impacts on hydrology over two North American river basins},
   volume = {479},
   url = {http://dx.doi.org/10.1016/j.jhydrol.2012.11.062},
   year = {2013},
}
@article{Marcot2006,
   abstract = {Bayesian belief networks (BBNs) are useful tools for modeling ecological predictions and aiding resource-management decision-making. We provide practical guidelines for developing, testing, and revising BBNs. Primary steps in this process include creating influence diagrams of the hypothesized “causal web” of key factors affecting a species or ecological outcome of interest; developing a first, alpha-level BBN model from the influence diagram; revising the model after expert review; testing and calibrating the model with case files to create a beta-level model; and updating the model structure and conditional probabilities with new validation data, creating the final-application gamma-level model. We illustrate and discuss these steps with an empirically based BBN model of factors influencing probability of capture of northern flying squirrels (Glaucomys sabrinus (Shaw)). Testing and updating BBNs, especially with peer review and calibration, are essential to ensure their credibility and reduce bias. Our guidelines provide modelers with insights that allow them to avoid potentially spurious or unreliable models.},
   author = {Bruce G Marcot and J Douglas Steventon and Glenn D Sutherland and Robert K McCann},
   doi = {10.1139/x06-135},
   isbn = {0045-5067},
   issn = {0045-5067},
   issue = {12},
   journal = {Canadian Journal of Forest Research},
   pages = {3063-3074},
   title = {Guidelines for developing and updating Bayesian belief networks applied to ecological modeling and conservation},
   volume = {36},
   url = {http://www.nrcresearchpress.com/doi/abs/10.1139/x06-135},
   year = {2006},
}
@article{Walker2003,
   author = {W. E. Walker and P. Harremoës and J. Rotmans and J. P. van der Sluijs and M. B. A. van Asselt and P. Janssen and M.P. Krayer von Krauss},
   doi = {10.1076/iaij.4.1.5.16466},
   issn = {1389-5176},
   issue = {1},
   journal = {Integrated Assessment},
   keywords = {ignorance,integrated assessment,model-based decision support,policy analysis,risk assessment,uncertainty},
   note = {Définition de l'incertitude dans ce papier: &quot;Tout écart à l'idéal irréalisable du déterminisme complet&quot;. <br/><br/>Trois dimensions liées à l'incertitude : <br/>(i) La localisation de l'incertitude : ou se situe t-elle dans le modèle complexe ? <br/>(ii) Le niveau d'incertitude : entre la connaissance parfaite et l'ignorance totale<br/>(iii) La nature de l'incertitude: Est ce que l'incertitude est due à un manque de connaissances ou à la variabilité du phénomène décrit.<br/><br/>Chaque dimension se divise en plusieurs niveau. <br/>(i) <br/>- Le contexte: incertitude par rapports aux frontières du problème qui est modélisé. <br/>- Incertitude liée au modèle : vient à la fois de la structure du modèle (variables et reations entre variables pour décrire le système étudié) et les incertitudes techniques du modèle (erreurs du logiciel etc.). <br/>- Les variables d'entrées permettant de décrire le système<br/>- Les paramètres du modèle, c'est à dire les différentes constantes qui interviennent. <br/>- L'incertitude accumulée: pour aboutir au résultat final, les différentes incertitudes décrites ci dessus vont se mélanger pour forme une accumulation d'incertitude amplifiée par le modèle. <br/><br/>(ii) Distinction de plusieurs niveaux d'incertitudes: <br/>- Déterminisme : situation idéal où l'on connait tout exactement. Inatteignable<br/>- Incertitude statistique: toute incertitude pouvant être décrite par des termes statistiques. <br/>- Incertitude du scénario: il y a plusieurs futures possibles et de par nos connaissances actuelles il n'est pas possible de formuler une probabilités associée à chacun de ces scénarios. <br/>- Ignorance reconnue: base scientifique pour développer des scénarios est insuffisante. Peut être divisée en ignorance réductible (corrigée par de futures recherches) et en ignorance irréductible (impossible d'avoir plus d'informations sur le sujet).<br/>- Ignorance totale : on ignore ce que l'on ignore. <br/><br/>(iii) Se base sur la distinction entre deux extrêmes: <br/>- Incertitude epistemique: causée par un manque de connaissance corrigible par des recherches plus approfondies. <br/>- Incertitude liée à la variabilité: dans ce cas la, des recherches supplémentaires ne diminueraient pas nécessairement l'incertitude.},
   pages = {5-17},
   title = {A Conceptual Basis for Uncertainty Management},
