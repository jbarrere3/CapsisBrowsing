   isbn = {0030-1299},
   issn = {0030-1299},
   journal = {Oikos},
   note = {Effet négatif des bryophytes sur l'émergence mais seulement en conditions sèches : potentiellement un effet médié par l'humidité ? <br/>De plus : espèces prairiales donc pas forcément extrapolable aux espèces forestières.},
   pages = {603-611},
   pmid = {1464},
   title = {Effects of bryophytes and lichens on seedling emergence of alvar plants: evidence from greenhouse experiments},
