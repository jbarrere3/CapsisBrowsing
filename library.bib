   isbn = {0269-8463},
   issn = {02698463},
   issue = {2},
   journal = {Functional Ecology},
   keywords = {Antibiosis,Co-evolution,Genetic covariance,Plant defence,Plant resistance,Plant-insect,Secondary chemistry},
   pages = {358-367},
   title = {Plant traits that predict resistance to herbivores},
   volume = {25},
