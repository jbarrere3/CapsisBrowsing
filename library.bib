   journal = {Earth's Future},
   keywords = {Societal adaptation to glacier change,ecological changes in mountain streams,future mountain hydrology,impacts of climate change,snow and glacier melt},
   month = {5},
   pages = {418-435},
   publisher = {John Wiley and Sons Inc},
