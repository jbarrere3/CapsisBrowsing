   journal = {Forests},
   keywords = {Alces alces,Competition,Herbivore,Picea,Silviculture,Ungulate,Vegetation control},
   pages = {1-16},
   title = {Moose browsing tends spruce plantations more efficiently than a single mechanical release},
   volume = {11},
