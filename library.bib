   issn = {00218812},
   issue = {9},
   journal = {Journal of Animal Science},
   keywords = {Bacterial Protein,Nitrogen Balance,Protozoa,Ruminant Flora,Sheep},
   note = {Koenig, K. M., Newbold, C. J., McIntosh, F. M., &amp; Rode, L. M. (2000). Effects of protozoa on bacterial nitrogen recycling in the rumen. <i>Journal of Animal Science</i>, <i>78</i>(9), 2431–2445. https://doi.org/10.2527/2000.7892431x},
