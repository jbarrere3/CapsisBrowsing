   issue = {4},
   journal = {Physiologia Plantarum},
   pages = {559-574},
   pmid = {18823329},
   title = {Ozone-induced changes in photosynthesis and photorespiration of hybrid poplar in relation to the developmental stage of the leaves},
   volume = {134},
   year = {2008},
}
