   journal = {Small Ruminant Research},
   keywords = {FNIRS,Faeces,Fallow deer,Near infrared reflectance spectroscopy,Red deer},
   pages = {141-150},
   pmid = {8},
   title = {Determination of sex and species in red and fallow deer by near infrared reflectance spectroscopy of the faeces},
