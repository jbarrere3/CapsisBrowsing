   issue = {2},
   journal = {Oikos},
   pages = {280-290},
   title = {Estimate of the seed shadow created by the Asiatic black bear Ursus thibetanus and its characteristics as a seed disperser in Japanese cool-temperate forest},
   volume = {120},
   year = {2011},
}
@article{Fortin2013,
