   issue = {2},
   journal = {Biological Invasions},
   keywords = {Biological crust,Liverwort,Moss,Plant invasion,Seedling regeneration,Soil disturbance,Themeda triandra},
   note = {Souligne le rôle de barrière physique des bryophytes. <br/>Mais la encore, étude conduite en prairie dans un contexte différent des forêts tempérées.},
   pages = {159-168},
   title = {Bryophyte mats inhibit germination of non-native species in burnt temperate native grassland remnants},
