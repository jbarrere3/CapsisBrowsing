   issn = {16541103},
   issue = {1},
   journal = {Journal of Vegetation Science},
   keywords = {Odocoileus virginianus,Wisconsin,disturbance interactions,gap partitioning,herbaceous layer,homogenization,non-parametric multiplicative regression,northern hardwoods,plant traits},
   title = {Effects of forest canopy gaps on the ground-layer plant community depend on deer: Evidence from a controlled experiment},
