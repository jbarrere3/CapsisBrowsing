   keywords = {long-term studies,old-growth forest,permanent plots,temperate forest,tree mortality rates},
   month = {6},
   pages = {1311-1333},
   publisher = {Blackwell Publishing Ltd},
   title = {Multi-decade tree mortality in temperate old-growth forests of Europe and North America: Non-equilibrial dynamics and species-individualistic response to disturbance},
