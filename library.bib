   keywords = {Biotic resistance,Exotic herbivores,Exotic plants,Invasional meltdown,Meta-analysis,Native plants},
   pages = {407-419},
   pmid = {263},
   title = {Exotic vertebrate and invertebrate herbivores differ in their impacts on native and exotic plants: A meta-analysis},
   volume = {12},
