   isbn = {0378-1127},
   issn = {03781127},
   issue = {6},
   journal = {Forest Ecology and Management},
   keywords = {Dendrochronology,Drought,Fagus sylvatica L.,Precipitation gradient,Quercus robur L.,Tree rings},
   pages = {947-961},
   pmid = {57},
   publisher = {Elsevier B.V.},
   title = {Drought matters - Declining precipitation influences growth of Fagus sylvatica L. and Quercus robur L. in north-eastern Germany},
