   isbn = {0123456789},
   issn = {15735052},
   issue = {6},
   journal = {Plant Ecology},
   keywords = {Abies balsamea,Alces alces,Chemical defense,Condensed tannins,Delayed induced response,Newfoundland,Phenols,Simulated browsing},
   pages = {487-500},
   publisher = {Springer Netherlands},
   title = {Antiherbivore chemicals in emerging and previous-year foliage of balsam fir saplings responding to prior simulated browsing},
