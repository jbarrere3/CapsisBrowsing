   issn = {02698463},
   issue = {5},
   journal = {Functional Ecology},
   keywords = {Grassland,Leaf dry-matter content,Leaf nitrogen content,Primary productivity,Specific leaf area},
   pages = {844-853},
   title = {Leaf traits affect the above-ground productivity and quality of pasture grasses},
   volume = {21},
