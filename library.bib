   isbn = {0022-0302},
   issn = {00220302},
   issue = {4},
   journal = {Journal of Dairy Science},
   keywords = {ecology,evolution,livestock research,ruminant},
   pages = {1320-1334},
   pmid = {20338409},
   publisher = {Elsevier},
   title = {Invited review: Ruminant ecology and evolution: Perspectives useful to ruminant livestock research and production},
   volume = {93},
