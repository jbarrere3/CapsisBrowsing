   issn = {1146609X},
   issue = {2},
   journal = {Acta Oecologica},
   keywords = {Agricultural environments,Domestication,Leaf construction strategy,Manihot,Resource allocation},
   note = {Article qui montre que le ratio C/N est plus important chez les plantes sauvages que les plantes domestiquées mais peu d'effet sur les tannins. Suggère que la hausse du rapport C:N devrait refléter un investissement dans d'autres composés que les défenses chimiques, tels que les composés cellulaires (et donc plutôt la résistance mécanique et la conservation des ressources).},
   pages = {147-154},
   title = {Domestication and defence: Foliar tannins and C/N ratios in cassava and a close wild relative},
   volume = {34},
