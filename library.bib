   journal = {Journal of Wildlife Management},
   keywords = {Cervus nippon,Japan,density dependent,diet composition,food availability,long-term monitoring,rumen contents,sika deer,snow depth,wintering ranges},
   pages = {243-253},
   title = {Effects of population density and snow depth on the winter diet composition of sika deer},
