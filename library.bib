   isbn = {0929-1393},
   issn = {09291393},
   issue = {1},
   journal = {Applied Soil Ecology},
   keywords = {AMMI,ANOSIM,Alfalfa meal,Compost,Organic agriculture,PerMANOVA,Rhizosphere bacteria,Sesame meal,T-RFLP,Tomato (Lycopersicon esculentum),Transplant media,Vermicompost},
   pages = {94-101},
   publisher = {Elsevier B.V.},
   title = {Choice of organic amendments in tomato transplants has lasting effects on bacterial rhizosphere communities and crop performance in the field},
