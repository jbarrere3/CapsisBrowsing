   isbn = {1100-9233},
   issn = {11009233},
   issue = {1},
   journal = {Journal of Vegetation Science},
   keywords = {calcareous grasslands,central germany,cirsium-vulgare,disturbance,dormant seed,elasticity analysis,hills,lasius flavus,megamatrix analysis,mountain grassland,plant ecology,projection matrix analysis,seed banks,species-richness,veronica-arvensis},
   note = {Travail sur des plantes annuelles<br/>Même résultats que dans les autres études: effet négatif de la couverture par des mousses sur la germination.},
   pages = {91-102},
   title = {Population dynamics of annuals in perennial grassland controlled by ants and environmental stochasticity},
