   issue = {6},
   journal = {Basic and Applied Ecology},
   keywords = {Above-belowground interactions,Biodiversity,Ecosystem services,Foodweb,Global human-induced changes,Stability,Sustainable land use,Trophic level communities},
   pages = {487-494},
   title = {Trophic interactions in a changing world},
   volume = {5},
   year = {2004},
}
