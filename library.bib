   isbn = {1466-8238},
   issn = {14668238},
   issue = {10},
   journal = {Global Ecology and Biogeography},
   keywords = {Background herbivory,Climate,Defoliators,Gallers,Geographic pattern,Latitudinal variation,Miners,Research bias},
   pages = {1126-1135},
   title = {Global patterns in background losses of woody plant foliage to insects},
